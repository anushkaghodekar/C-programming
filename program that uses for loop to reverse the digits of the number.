#include<stdio.h>
void main()
{
    int num,temp,rem,result = 0;
    printf("Enter a integer: ");
    scanf("%d", &num);
    temp = num;
    
    while (temp != 0)
    {
        rem = temp%10;
        result = result*10+rem;
        temp /= 10;
        
    }
    printf("\n%d is number.",num);
    printf("\n%d is reverse of number.",result);
 
}
